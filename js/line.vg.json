{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/JohansenPandean21/Assignment-2-Data-Vis/main/Melbourne_Pricing_House.csv"
    },
    "width": "container",
    "height": 420,
    "padding":10,
    "layer":[
      {
        "encoding": {
          "x": { "timeUnit" : "yearmonthdate",
            "field":"Date",
            "type":"temporal", 
            "axis":{
                "domain": false,
                "tickSize": 0 
            }, "title": ""},
          "y": {"field": "no_sold_pr", "type": "quantitative", "title":"Unit Sold"},
          "color": {"field": "Regionname", "type": "nominal","title" : "Region Name"}
      },
      "layer":[
        {"mark":"line"},
        {
          "params":[{
            "name":"label",
            "select":{
              "type":"point",
              "encodings":["x"],
              "nearest":true,
              "on":"mousemove"
            }
          }],
          "mark":"point",
          "encoding":{
            "color":{
              "field":"Regionname",
              "type":"nominal",
              "scale":{
                    "type":"threshold",
                  "domain":["Eastern Metropolitan","Northern Metropolitan","South-Eastern Metropolitan", "Southern Metropolitan",
                "Western Metropolitan"],
                "range":["#7C725D", "#0066CC", "#1F6F75","#C48DF5","#F27DB3"]
                }
            },
              "opacity": {
                "condition": {
                  "param": "label",
                  "empty": false,
                  "value": 1
                },
                "value": 0
              }
          }
        }
      ]
      },
      {
        "transform": [{"filter": {"param": "label", "empty": false}},
        {"filter":"datum.Regionname !== 'undefined'"},
        {"filter":"datum.Regionname !== 'Western Victoria'"},
        {"filter":"datum.Regionname !== 'Eastern Victoria'"},
        {"filter":"datum.Regionname !== 'Northern Victoria'"}],
        "encoding":{
          "x":{
            "field":"Date",
            "type":"temporal"
          },
          "color":{"value":"black"}
        },
        "layer": [
          
          {
            "mark": {"type": "rule", "color": "gray"},
            "encoding": {
              "x": {"type": "temporal", "field": "Date", "aggregate": "min"},
              "color":{"value":"black"}
            }
          },
          {
            "encoding": {
              "text": {"type": "quantitative", "field": "no_sold_pr"},
              "x": {"type": "temporal", "field": "Date"},
              "y": {"type": "quantitative", "field": "no_sold_pr"}
            },
            "layer": [
              {
                "mark": {
                  "type": "text",
                  "stroke": "white",
                  "strokeWidth": 2,
                  "align": "left",
                  "dx": 5,
                  "dy": -5
                }
              },
              {
                "mark": {"type": "text", "align": "left", "dx": 5, "dy": -5},
                "encoding": {
                "x":{"field":"Date","type":"temporal"},
                  "color":{"value":"green"}
                }
              }
            ]
          }
        ]
      }
    ],
    "config":{
      "legend": {
        "titleFontSize": 12,
        "labelFontSize": 10,
        "orient": "none",
        "direction": "horizontal",
        "columns":3,
        "columnPadding":20,
        "legendX": 0,
        "legendY": 500,
        "titleAnchor": "start",
        "titleOrient": "left"
    },
    "font":"Mukta",
    "axis": {
      "labelFontSize": 13,
      "titleFontSize": 15
  },
    "background":"#f5f5f5",
          "style":{"cell":{"stroke":"transparent"}}
    }
  }
  