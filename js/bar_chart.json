{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/JohansenPandean21/Assignment-2-Data-Vis/main/Melbourne_Pricing_House.csv"
      },
    "width": "container",
    "height": 300,
    "padding":0,
    "encoding":{
        "x":{
            "field":"SellerG", 
            "type":"nominal",
            "title":"Agencies Name",
            "axis":{
                "labelAngle":51
            }
        },
        "y":{"field":"count_number", 
        "type":"quantitative",
        "title":"Property Sold",
        "axis":null
            }
    },
    "transform":[
        {
            "aggregate":[{"op":"count","field":"datum.No_sold", "as":"count_number"}],
            "groupby": ["SellerG"]
        },
        {"filter":"datum.count_number > 100"}
    ],
    "layer":[
        {
            "mark":{
                "type":"bar"
            }
        },
        {
            "mark":{
                "type":"text",
                "align":"right",
                "dx":10,
                "dy":-5,
                "strokeWidth":5
            },
            "encoding":{
                "text":{"field":"count_number","type":"quantitative"},
                "color":{
                  "condition":{
                    "test":"datum['SellerG'] == 'Jellis'|| datum['SellerG'] == 'Nelson'", "value": "#FF08CD"
                  },
                  "value":"black"
                }
        }
    }
    ],
    "config":{
        "axis": {
            "labelFontSize": 13,
            "titleFontSize": 15
        },
        "font":"Mukta",
        "background":"#f5f5f5",
        "style":{"cell":{"stroke":"transparent"}}
    }
}